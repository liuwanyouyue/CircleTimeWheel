<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--用于listview-->
    <declare-styleable name="ListViewItem">
        <!--图标资源-->
        <attr name="iconSrc" format="reference" />
        <!--左边文字-->
        <attr name="textLeft" format="integer" />
        <!--上边文字-->
        <attr name="textTop" format="string" />
        <!--下边文字-->
        <attr name="textBottom" format="string" />
        <!--右边文字-->
        <attr name="textRight" format="string" />
        <!--右边文字颜色-->
        <attr name="textRightColor" format="color" />
        <!--下一步-->
        <attr name="isShowNext" format="boolean" />
        <!--开关-->
        <attr name="isShowSwitch" format="boolean" />
        <attr name="isIvShowSwitch" format="boolean" />
        <!--开关状态-->
        <attr name="switchChecked" format="boolean" />
    </declare-styleable>

    <!--用于Activity中的进度条-->
    <declare-styleable name="ActivityProgressBar">
        <!--图标-->
        <attr name="activityProgressIconSrc" format="reference" />
        <!--文字-->
        <attr name="activityProgressSportType" format="integer" />
        <!--背景颜色-->
        <attr name="activityProgressBackgroundColor" format="color" />
        <!--进度条颜色-->
        <attr name="activityProgressProgressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="WatchFacesImage">
        <!--手环界面-->
        <attr name="watchFacesImgSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <!--边框宽度-->
        <attr name="civ_border_width" format="dimension" />
        <!--边框颜色-->
        <attr name="civ_border_color" format="color" />
        <!--边框是否覆盖-->
        <attr name="civ_border_overlay" format="boolean" />
        <!--边框填充颜色-->
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--用于睡眠日底部的图标-->
    <declare-styleable name="SleepDetailDayBottomIcon">
        <!--中间文字-->
        <attr name="sleepDayText" format="integer" />
        <!--底部时间-->
        <attr name="sleepDayTime" format="string" />
        <!--图标资源-->
        <attr name="sleepDayIcon" format="reference" />
    </declare-styleable>

    <!--用于自定义编辑控件-->
    <declare-styleable name="EditViewItem">
        <!--图标资源-->
        <attr name="iconSrcEdit" format="reference" />
        <!--左边文字-->
        <attr name="textLeftEdit" format="integer" />
        <!--左边文字-->
        <attr name="inputTypeEdit" format="integer" />

    </declare-styleable>

    <declare-styleable name="CircleWheelView">
        <attr name="wheel_data" format="reference" />
        <attr name="wheel_selected_item_position" format="integer" />
        <attr name="wheel_item_text_size" format="dimension" />
        <attr name="wheel_item_text_color" format="color" />
        <attr name="wheel_selected_item_text_color" format="color" />
        <attr name="wheel_visible_item_count" format="integer" />
        <attr name="wheel_indicator" format="boolean" />
        <attr name="wheel_turn_to_centerx" format="integer" />
        <attr name="wheel_indicator_color" format="color" />
        <attr name="wheel_indicator_size" format="dimension" />
        <attr name="wheel_curtain" format="boolean" />
        <attr name="wheel_curtain_color" format="color" />
        <attr name="wheel_atmospheric" format="boolean" />
        <attr name="wheel_cyclic" format="boolean" />
        <attr name="wheel_loop_display" format="boolean" />
        <attr name="wheel_curved" format="boolean" />

        <attr name="wheel_letter_index" format="boolean" />
        <attr name="wheel_letter_line_color" format="color" />
        <attr name="wheel_letter_normal_color" format="color" />
        <attr name="wheel_letter_select_color" format="color" />

        <attr name="wheel_item_align" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="wheel_word" format="boolean" />
        <attr name="wheel_word_size" format="dimension" />
    </declare-styleable>

    <!--拍照 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <!--拍照 -->
    <declare-styleable name="AddReminderView">
        <attr name="reminderType" format="integer" />
    </declare-styleable>
</resources>
